APP_NAME="Atom Suite - Multi-Tenant"
APP_ENV=local
APP_KEY=base64:generated_key_here
APP_DEBUG=true
APP_URL=http://localhost

# Central Domain
CENTRAL_DOMAIN=localhost

# Central Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=atom_suit_central
DB_USERNAME=root
DB_PASSWORD=

# Central Database Connection
CENTRAL_DB_CONNECTION=mysql
CENTRAL_DB_HOST=127.0.0.1
CENTRAL_DB_PORT=3306
CENTRAL_DB_DATABASE=atom_suit_central
CENTRAL_DB_USERNAME=root
CENTRAL_DB_PASSWORD=

# Tenant Database Configuration
TENANT_DB_PREFIX=atom_suit_tenant_

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Authentication
AUTH_GUARD=api
AUTH_MODEL=App\Models\User

# Passport Configuration
PASSPORT_PRIVATE_KEY=
PASSPORT_PUBLIC_KEY=
PASSPORT_CONNECTION=central

# Queue Configuration
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Broadcasting
BROADCAST_DRIVER=log

# File System
FILESYSTEM_DISK=local

# Cache
CACHE_DRIVER=file